{
  "name": "@davidwarrington/stylelint-config",
  "version": "2.2.0",
  "main": "index.js",
  "types": "index.d.ts",
  "exports": {
    ".": {
      "default": "./index.js",
      "types": "./index.d.ts"
    },
    "./bemit": {
      "default": "./bemit/index.js",
      "types": "./bemit/index.d.ts"
    },
    "./scss": {
      "default": "./scss/index.js",
      "types": "./scss/index.d.ts"
    }
  },
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/davidwarrington/tool-configs",
    "directory": "packages/stylelint-config"
  },
  "bugs": {
    "url": "https://github.com/davidwarrington/tool-configs/issues"
  },
  "keywords": [
    "stylelint",
    "stylelintrc"
  ],
  "files": [
    "**/index.d.ts",
    "**/*.js"
  ],
  "scripts": {
    "build": "rm -f index.d.ts **/index.d.ts && tsup",
    "prepublishOnly": "pnpm build",
    "test": "vitest"
  },
  "dependencies": {
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-config-standard-scss": "^13.1.0"
  },
  "devDependencies": {
    "stylelint": "^16.8.1",
    "tsup": "^8.2.4",
    "vitest": "^2.0.5",
    "vitest-stylelint-utils": "^1.0.1"
  },
  "peerDependencies": {
    "stylelint": "^16.8.1"
  }
}
